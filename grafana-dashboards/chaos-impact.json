{
  "id": null,
  "uid": "chaos-impact",
  "title": "Chaos Experiments Impact",
  "schemaVersion": 30,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "CPU Usage (pods)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "rate(container_cpu_usage_seconds_total{container!=\"\",pod!=\"\"}[1m])", "legendFormat": "{{pod}}" }
      ]
    },
    {
      "type": "graph",
      "title": "Memory Usage (pods)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "container_memory_usage_bytes{container!=\"\",pod!=\"\"}", "legendFormat": "{{pod}}" }
      ]
    },
    {
      "type": "graph",
      "title": "Chaos Experiment Timeline",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "chaos_experiment_status", "legendFormat": "{{experiment}}" }
      ]
    }
  ]
}
